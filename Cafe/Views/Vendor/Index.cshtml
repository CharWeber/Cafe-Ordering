@using Cafe.Models

<h1>Vendors</h1>
<h3>click a Vendor to see the details, Pierre!<h3>

@if (@Model.Count == 0)
{
  <h3> No Vendors have been added Pierre! </h3>
}
<p>Gotta lotta nice vendors out there Boss</p>
@foreach (Vendor vendor in Model)
{
  <h4><a href="/vendors/@vendor.Id">@vendor.Name</a></h4>
}

<p><a href="/vendors/new">Add a new Vendor</a></p>

<p><a href="/">Home</a></p>