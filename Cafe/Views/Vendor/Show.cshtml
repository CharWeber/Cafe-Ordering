@using Cafe.Models;
@{
  Layout = "_Layout";
}

<div class="card mx-auto">
  <h1>@Model["vendor"].Name Orders</h1>
  
  @if (Model["orders"].Count == 0)
  {
    <p>we haven't done any business with them yet boss</p>
  }
  

  @foreach (Order order in Model["orders"])
  {

      <p><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Description</a></p>
      <p>order number: @order.Id</p>

  }

  <p><a href='/vendors/@Model["vendor"].Id/orders/new'>Create Order</p>
</div>
